<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.lifecircle20.ui.home.HomeFragment"
        android:label="Login"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.lifecircle20.ui.dashboard.DashboardFragment"
        android:label="Input Form"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.lifecircle20.ui.notifications.NotificationsFragment"
        android:label="Saved Input"
        tools:layout="@layout/fragment_notifications" />

</navigation>